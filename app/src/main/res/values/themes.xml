<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hours" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_center_color</item>
        <item name="colorPrimaryVariant">@color/background_end_color</item>
        <item name="colorOnPrimary">@color/background_end_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_center_color</item>
        <item name="colorSecondaryVariant">@color/background_end_color</item>
        <item name="colorOnSecondary">@color/background_end_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <item name="android:navigationBarColor">@color/background_center_color</item>
        <item name="android:windowBackground">@drawable/background_app</item>
        <item name="android:windowSplashScreenAnimationDuration">5000</item>
        <item name="colorControlActivated">@color/settings_switch_checked</item>
        <item name="colorSwitchThumbNormal">@color/gray_50</item>

        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
<!--        <item name="android:windowBackground">@color/settings_window_background</item>-->
    </style>

    <style name="Theme.Hours.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hours.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Hours.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>