<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hours" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_end_color</item>
        <item name="colorPrimaryVariant">@color/background_end_color</item>
        <item name="colorOnPrimary">@color/background_end_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_end_color</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>

        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/switchActivated</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/gray_90</item>

        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="android:windowSplashScreenAnimationDuration">5000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

    </style>
</resources>