<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lbl_exit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="יציאה:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_exit_time"
        app:layout_constraintTop_toBottomOf="@+id/ckbtn_day_friday" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_exit_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@drawable/background_input"
        android:text="@string/midnight_timestamp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_arrival_time"
        app:layout_constraintEnd_toStartOf="@+id/lbl_exit_time"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lbl_arrival_time" />
</androidx.constraintlayout.widget.ConstraintLayout>