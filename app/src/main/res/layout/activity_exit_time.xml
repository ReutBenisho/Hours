<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgr_app"
    tools:context=".ExitTimeActivity">

    <TextView
        android:id="@+id/lbl_txt_zero_hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_zero_hours"
        app:layout_constraintEnd_toEndOf="@+id/lbl_txt_full_day"
        app:layout_constraintStart_toStartOf="@+id/lbl_txt_full_day"
        app:layout_constraintTop_toTopOf="@+id/lbl_zero_hours" />

    <TextView
        android:id="@+id/lbl_txt_3_and_half_hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_3_and_half_hours"
        app:layout_constraintEnd_toEndOf="@+id/lbl_txt_zero_hours"
        app:layout_constraintStart_toStartOf="@+id/lbl_txt_zero_hours"
        app:layout_constraintTop_toTopOf="@+id/lbl_3_and_half_hours" />

    <TextView
        android:id="@+id/lbl_txt_6_hours"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_6_hours"
        app:layout_constraintEnd_toEndOf="@+id/lbl_txt_3_and_half_hours"
        app:layout_constraintStart_toStartOf="@+id/lbl_txt_3_and_half_hours"
        app:layout_constraintTop_toTopOf="@+id/lbl_6_hours" />

    <TextView
        android:id="@+id/lbl_zero_hours"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="שעות אפס:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/lbl_full_day"
        app:layout_constraintTop_toBottomOf="@+id/lbl_full_day" />

    <TextView
        android:id="@+id/lbl_3_and_half_hours"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="3.5 נוספות:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/lbl_zero_hours"
        app:layout_constraintTop_toBottomOf="@+id/lbl_zero_hours" />

    <TextView
        android:id="@+id/lbl_6_hours"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="6 נוספות:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/lbl_3_and_half_hours"
        app:layout_constraintTop_toBottomOf="@+id/lbl_3_and_half_hours" />

    <TextView
        android:id="@+id/lbl_txt_full_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_full_day"
        app:layout_constraintEnd_toEndOf="@+id/lbl_txt_half_day"
        app:layout_constraintStart_toStartOf="@+id/lbl_txt_half_day"
        app:layout_constraintTop_toTopOf="@+id/lbl_full_day" />

    <TextView
        android:id="@+id/lbl_full_day"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="יום מלא:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/lbl_half_day"
        app:layout_constraintTop_toBottomOf="@+id/lbl_half_day" />

    <TextView
        android:id="@+id/lbl_calc_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="חישוב שעות"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:id="@+id/lbl_exit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="מתי לצאת?"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_arrival_time" />

    <TextView
        android:id="@+id/lbl_arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="כניסה:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_arrival_time"
        app:layout_constraintTop_toBottomOf="@+id/lbl_calc_time" />

    <TextView
        android:id="@+id/lbl_half_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="90dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="חצי יום:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lbl_txt_half_day"
        app:layout_constraintTop_toBottomOf="@+id/lbl_exit_time" />

    <TextView
        android:id="@+id/lbl_txt_half_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_half_day"
        app:layout_constraintEnd_toStartOf="@+id/lbl_half_day"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lbl_half_day" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_arrival_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bkgr_input"
        android:onClick="popTimePicker"
        android:text="00:00"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/lbl_arrival_time"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_calc_time" />

</androidx.constraintlayout.widget.ConstraintLayout>